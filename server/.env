# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/library_management

# Server port
PORT=5000

# Cloudinary credentials (replace with your actual Cloudinary account details)
CLOUDINARY_CLIENT_NAME=your_cloudinary_name
CLOUDINARY_CLIENT_API=your_cloudinary_api_key
CLOUDINARY_CLIENT_SECRET=your_cloudinary_api_secret

# Frontend URL
FRONTEND_URL=http://localhost:3000

# JWT settings
JWT_SECRET_KEY=your_jwt_secret_key
JWT_EXPIRE=7d

# SMTP (email) settings (replace with your actual SMTP provider details)
SMTP_HOST=smtp.example.com
SMTP_SERVICE=Gmail
SMTP_PORT=587
SMTP_MAIL=your_email@example.com
SMTP_PASSWORD=your_email_password

# Cookie expiration (in days)
COOKIE_EXPIRE=7
